<!DOCTYPE html>
<html>
  <head>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script
      src="https://kit.fontawesome.com/848337fddf.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <div style="font-size: large">
      <% if (user) { %>
      <a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
      <br />
      <br />
      <div class="container">
        <!-- User Card-->
        <div class="card mb-3" style="max-width: 800px">
          <div class="row g-0">
            <div class="col-md-2">
              <img
                src="<%= user.avatar %>"
                alt="..."
                style="height: 100%; width: 100%"
              />
            </div>
            <div class="col-md-10">
              <div class="card-body">
                <!-- <h5 class="card-title">Name: <%= user.name%></h5> -->
                <ul class="list-group list-group-flush">
                  <li class="list-group-item">Name: <%= user.name %></li>
                  <li class="list-group-item">Email: <%= user.email %></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <!-- Button trigger modal(Form for Booking) -->
        <button
          type="button"
          class="btn btn-primary"
          data-bs-toggle="modal"
          data-bs-target="#exampleModal"
        >
          Book Your Test Drive
        </button>

        <!-- Modal(Form for Booking)  -->
        <div
          class="modal fade"
          id="exampleModal"
          tabindex="-1"
          aria-labelledby="exampleModalLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog">
            <div class="modal-content">
              <form
                id=""
                action="/users/<%= user._id %>/bookings"
                method="POST"
                enctype="multipart/form-data"
              >
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">
                    Book Your Test Drive
                  </h5>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>
                <div class="modal-body">
                  <div class="form-group">
                    <div class="input-group mb-3">
                      <label class="input-group-text" for="inputGroupSelect01"
                        >Select Bike</label
                      >
                      <select
                        class="form-select"
                        id="inputGroupSelect01"
                        name="bike"
                      >
                        <% bikes.forEach(function(bike){ %>
                        <option value="<%= bike%>">
                          <%= bike.brand %> / <%= bike.model %>
                        </option>
                        <% }); %>
                      </select>
                    </div>
                    <div class="input-group mb-3">
                      <span
                        class="input-group-text"
                        id="inputGroup-sizing-default"
                        >Date & Time</span
                      >
                      <input
                        type="datetime-local"
                        class="form-control"
                        aria-label="Sizing example input"
                        aria-describedby="inputGroup-sizing-default"
                        name="date"
                      />
                    </div>
                  </div>
                </div>
                <div class="modal-footer">
                  <button
                    type="button"
                    class="btn btn-secondary"
                    data-bs-dismiss="modal"
                  >
                    Close
                  </button>
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </form>
            </div>
          </div>
        </div>
        <!-- Booking -->
        <br />
        <div class="bookings">
          <h3>Test Drive Appointments</h3>
          <% if(user.bookings.length){ %>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Manufacturer</th>
                <th scope="col">Model</th>
                <th scope="col">Date & Time</th>
                <th scope="col">.</th>
              </tr>
            </thead>
            <tbody></tbody>
          </table>
          <% } %>
        </div>
      </div>
      <% } else { %>
      <a href="/auth/google"
        ><i class="fab fa-google-plus-g"> Login with Google</i></a
      >
      <h3>Please Login to Book a test drive or View your appointments</h3>
      <% } %>
    </div>
  </body>
</html>
